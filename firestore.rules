
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Admin status is determined by the existence of a document in the /admins collection.
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Validates that a user is updating their own profile without escalating privileges.
    function isUpdatingOwnValidProfile() {
        return request.resource.data.player.uid == resource.data.player.uid &&
               request.resource.data.player.isBanned == resource.data.player.isBanned &&
               request.resource.data.player.isMuted == resource.data.player.isMuted;
    }

    // ========== COLLECTION RULES ==========
    
    // Admin roles collection
    match /admins/{uid} {
        // An admin can check their own status by reading their own document.
        allow get: if isOwner(uid);
        // No one can list all admins.
        allow list: if false;
        // Only other admins can grant or revoke admin privileges.
        allow write: if isAdmin();
    }

    // User profiles
    match /users/{userId} {
      // A user can get any profile for leaderboards/user pages.
      allow get: if isSignedIn();

      // Any signed-in user can list profiles for user directory & leaderboards.
      allow list: if isSignedIn();
      
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      
      // A user can update their own profile (with restrictions), or an admin can update any profile.
      allow update: if (isOwner(userId) && isUpdatingOwnValidProfile()) || isAdmin();

      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }
    
    // User subcollections are not used in this app structure.
    // All user-related data is within the user document itself.

    // Public feedback board
    match /feedback/{feedbackId} {
      // Any signed-in user can read feedback posts.
      allow read: if isSignedIn();

      // Any signed-in user can post feedback.
      allow create: if isSignedIn();

      // Only admins can modify or delete feedback posts.
      allow update, delete: if isAdmin();
    }

    // Login History Logs
    match /loginHistory/{logId} {
      // Only admins can read login history.
      allow read: if isAdmin();

      // Any signed-in user can create their own login attempt log.
      allow create: if isSignedIn(); 

      // Logs are immutable.
      allow update, delete: if false;
    }

    // Activity Logs
    match /activityLogs/{logId} {
      // Only admins can read or write activity logs.
      allow read, write: if isAdmin();
    }
  }
}
