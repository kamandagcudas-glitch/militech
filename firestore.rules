
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Admin status is determined by the authenticated user's email address.
      return isSignedIn() && request.auth.token.email == "kamandagcudas@gmail.com";
    }
    
    // Validates that a user is updating their own profile without escalating privileges.
    function isUpdatingOwnValidProfile() {
        let incoming = request.resource.data.player;
        let existing = resource.data.player;
        
        // Fields a user CANNOT change on their own profile
        return incoming.uid == existing.uid &&
               incoming.isBanned == existing.isBanned &&
               incoming.isMuted == existing.isMuted &&
               incoming.isCreator == existing.isCreator;
    }

    // ========== COLLECTION RULES ==========

    // User profiles
    match /users/{userId} {
      // Any signed-in user can read profiles for user directory & leaderboards.
      allow read, list: if isSignedIn();
      
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      
      // A user can update their own profile (with restrictions), or an admin can update any profile.
      allow update: if (isOwner(userId) && isUpdatingOwnValidProfile()) || isAdmin();

      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    // Public feedback board
    match /feedback/{feedbackId} {
      // Any signed-in user can read feedback posts.
      allow read, list: if isSignedIn();

      // Any signed-in user can post feedback.
      allow create: if isSignedIn();

      // Only admins can modify or delete feedback posts.
      allow update, delete: if isAdmin();
    }

    // Login History Logs
    match /loginHistory/{logId} {
      // Only admins can read login history.
      allow read, list: if isAdmin();

      // Any signed-in user can create their own login attempt log.
      allow create: if isSignedIn(); 

      // Logs are immutable.
      allow update, delete: if false;
    }

    // Activity Logs
    match /activityLogs/{logId} {
      // Only admins can read or write activity logs.
      allow read, write, list: if isAdmin();
    }
  }
}
