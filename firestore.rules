
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Admin status is determined by the `isCreator` flag in their own user document.
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.player.isCreator == true;
    }
    
    // Validates that a user is updating their own profile without escalating privileges.
    function isUpdatingOwnValidProfile() {
        return request.resource.data.player.uid == resource.data.player.uid &&
               request.resource.data.player.isCreator == resource.data.player.isCreator &&
               request.resource.data.player.isBanned == resource.data.player.isBanned &&
               request.resource.data.player.isMuted == resource.data.player.isMuted;
    }

    // ========== COLLECTION RULES ==========

    // User profiles
    match /users/{userId} {
      // GET: A user can get their own profile. An admin can get any profile. Any signed-in user can view profiles for leaderboards/user pages.
      allow get: if isSignedIn();

      // LIST: Any signed-in user can list profiles for user directory & leaderboards.
      allow list: if isSignedIn();
      
      // CREATE: A user can create their own profile document.
      allow create: if isOwner(userId);
      
      // UPDATE: A user can update their own profile (with restrictions), or an admin can update any profile.
      allow update: if (isOwner(userId) && isUpdatingOwnValidProfile()) || isAdmin();

      // DELETE: Only admins can delete user profiles.
      allow delete: if isAdmin();
    }
    
    // User subcollections (e.g., files, achievements)
    match /users/{userId}/{subcollection}/{docId} {
        // Only the owner or an admin can read/write to a user's subcollections.
        allow read, write: if isOwner(userId) || isAdmin();
    }

    // Public feedback board
    match /feedback/{feedbackId} {
      // READ: Any signed-in user can read feedback posts.
      allow read: if isSignedIn();

      // CREATE: Any signed-in user can post feedback.
      allow create: if isSignedIn();

      // UPDATE/DELETE: Only admins can modify or delete feedback posts.
      allow update, delete: if isAdmin();
    }

    // Login History Logs
    match /loginHistory/{logId} {
      // READ: Only admins can read login history.
      allow read: if isAdmin();

      // CREATE: Any signed-in user can create their own login attempt log.
      allow create: if isSignedIn(); 

      // UPDATE/DELETE: Logs are immutable.
      allow update, delete: if false;
    }

    // Activity Logs
    match /activityLogs/{logId} {
      // Only admins can read or write activity logs.
      allow read, write: if isAdmin();
    }
  }
}
