
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "kamandagcudas@gmail.com";
    }

    // ========== COLLECTION RULES ==========

    match /users/{userId} {
      // Allow users to create their own profile document upon registration.
      allow create: if request.auth.uid == userId;
      
      // Allow any signed-in user to read user profiles to enable social features.
      // NOTE: This exposes all fields in user documents. For stricter security,
      // consider separating public and private data into different collections.
      allow list, read: if isSignedIn();
      
      // Allow users to update their own profile, or allow an admin to update any profile.
      allow update: if isOwner(userId) || isAdmin();
      
      // Allow users to delete their own account, or allow an admin to delete any account.
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Public feedback board
    match /feedback/{feedbackId} {
      allow read, list: if isSignedIn();

      allow create: if isSignedIn() &&
                       !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.player.isBanned &&
                       !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.player.isMuted;

      allow update, delete: if isAdmin();
    }

    // Login History Logs - Readable by admin, creatable by the user themselves.
    match /loginHistory/{logId} {
      allow read, list: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Logs are immutable.
    }

    // Activity Logs - Only accessible by admins.
    match /activityLogs/{logId} {
      allow read, write, list: if isAdmin();
    }

    // Chat Messages
    match /chats/{chatId}/messages/{messageId} {
      // Only participants in the chat can read or write messages.
      allow read, write: if isSignedIn() && request.auth.uid in chatId.split('_');

      // Additional validation on message creation.
      allow create: if isSignedIn() &&
                       request.auth.uid in chatId.split('_') &&
                       request.resource.data.senderId == request.auth.uid &&
                       request.resource.data.message is string &&
                       request.resource.data.message.size() > 0 &&
                       request.resource.data.timestamp == request.time;
    }
  }
}
