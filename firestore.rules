
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== HELPER FUNCTIONS ==========

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "kamandagcudas@gmail.com";
    }
    
    // Validates incoming data for a NEW user profile
    function isCreatingOwnValidProfile(userId) {
      let incomingData = request.resource.data;
      let incomingPlayer = incomingData.player;

      // User must be creating their own document.
      return isOwner(userId) &&
             // The UID in the document must match the auth UID.
             incomingPlayer.uid == request.auth.uid &&
             // A user cannot make themselves a creator on signup unless they have the admin email.
             incomingPlayer.isCreator == (request.auth.token.email == "kamandagcudas@gmail.com") &&
             // A user cannot start off as banned or muted.
             incomingPlayer.isBanned == false &&
             incomingPlayer.isMuted == false;
    }
    
    // Validates incoming data for an EXISTING user profile update
    function isUpdatingOwnValidProfile(userId) {
        let incomingPlayer = request.resource.data.player;
        let existingPlayer = resource.data.player;
        
        // A user can only update their own profile.
        return isOwner(userId) &&
               // These fields are immutable or admin-only.
               incomingPlayer.uid == existingPlayer.uid &&
               incomingPlayer.email == existingPlayer.email &&
               incomingPlayer.isCreator == existingPlayer.isCreator &&
               incomingPlayer.isBanned == existingPlayer.isBanned &&
               incomingPlayer.isMuted == existingPlayer.isMuted;
    }

    // ========== COLLECTION RULES ==========

    // User profiles
    match /users/{userId} {
      // Any signed-in user can read profiles for user directory & leaderboards, which is required by the app's features.
      allow read, list: if isSignedIn();
      
      // A user can create their own profile, but only with valid initial data.
      allow create: if isCreatingOwnValidProfile(userId);
      
      // A user can update their own profile (with restrictions), or an admin can update any profile.
      allow update: if isUpdatingOwnValidProfile(userId) || isAdmin();

      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    // Public feedback board
    match /feedback/{feedbackId} {
      // Any signed-in user can read feedback posts.
      allow read, list: if isSignedIn();

      // Any signed-in user can post feedback.
      allow create: if isSignedIn();

      // Only admins can modify or delete feedback posts.
      allow update, delete: if isAdmin();
    }

    // Login History Logs
    match /loginHistory/{logId} {
      // Only admins can read login history.
      allow read, list: if isAdmin();

      // Any signed-in user can create their own login attempt log.
      allow create: if isSignedIn(); 

      // Logs are immutable.
      allow update, delete: if false;
    }

    // Activity Logs
    match /activityLogs/{logId} {
      // Only admins can read or write activity logs.
      allow read, write, list: if isAdmin();
    }
  }
}
